<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/ic_net_bank_bg"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_20">

    <ImageView
        android:id="@+id/iv_bank_icon"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_bank_icon"
        android:layout_alignBottom="@+id/iv_bank_icon"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/iv_bank_icon"
        android:text="@string/bank_name"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_receipt_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bank_name"
        android:layout_alignStart="@+id/tv_bank_name"
        android:text="@string/account"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ib_to_charge"
        android:layout_width="@dimen/dp_91"
        android:layout_height="@dimen/dp_33"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_to_recharge" />
</RelativeLayout>