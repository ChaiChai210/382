<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_539"
        android:layout_height="@dimen/dp_314"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@id/img_dialog_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_dialog_bj" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_22"
            android:src="@drawable/ic_setting_title" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignTop="@id/img_dialog_bg"
            android:layout_alignEnd="@id/img_dialog_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@null"
            android:src="@drawable/ic_close" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginEnd="@dimen/dp_13">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableStart="@drawable/ic_wait"
                android:drawablePadding="@dimen/dp_10"
                android:text="@string/ru_kuan_zhong"
                android:textColor="#ffffff99"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv_charge_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_state"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="+0.00"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_charge_money"
                android:layout_centerHorizontal="true"
                android:text="订单号：xxxxxxxxxxxxxxxxxx"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_none"
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_num"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20" />

            <TextView
                android:id="@+id/tv_charge_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_none"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toStartOf="@+id/tv_none"
                android:maxLines="1"
                android:text="充值时间:"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_charge_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_none"
                android:layout_toEndOf="@+id/tv_none"
                android:maxLines="1"
                android:text="充值方式："
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_charge_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:padding="@dimen/dp_10"
                android:text="@string/cilck_lianxi_kefu"
                android:textColor="#ff3b98ff"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>