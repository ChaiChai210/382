<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_539"
        android:layout_height="@dimen/dp_314"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@id/img_dialog_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_dialog_bj" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_22"
            android:src="@drawable/ic_setting_title" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignTop="@id/img_dialog_bg"
            android:layout_alignEnd="@id/img_dialog_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@null"
            android:src="@drawable/ic_close" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dialog_xima_proportion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img_dialog_bg"
            android:layout_alignEnd="@+id/img_dialog_bg"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginEnd="@dimen/dp_16" />

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/rv_dialog_xima_proportion"
            android:layout_alignStart="@+id/img_dialog_bg"
            android:layout_alignEnd="@+id/img_dialog_bg"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@color/pc_bg_gray1">

            <TextView
                style="@style/ListTitle"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="@string/xima_range" />

            <TextView
                style="@style/ListTitle"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginStart="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_1"
                android:layout_weight="1.0"
                android:text="@string/xima_level" />

            <TextView
                style="@style/ListTitle"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="@string/xima_bi_li" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/msv_xima_proportion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:layout_alignStart="@+id/img_dialog_bg"
            android:layout_alignEnd="@+id/img_dialog_bg"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_20">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_proportion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_xima_proportion_grade"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/pc_dark_golden_bg"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/xima_current_level"
                android:textColor="@color/pc_dark_yellow"
                android:textSize="@dimen/sp_11" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>