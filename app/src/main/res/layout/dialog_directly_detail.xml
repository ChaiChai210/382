<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="@dimen/dp_539"
        android:layout_height="@dimen/dp_314"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/img_dialog_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_dialog_bj" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_22"
            android:src="@drawable/ic_setting_title" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignTop="@+id/img_dialog_bg"
            android:layout_alignEnd="@+id/img_dialog_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@null"
            android:src="@drawable/ic_close" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_65"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignStart="@+id/img_dialog_bg"
            android:layout_alignEnd="@+id/img_dialog_bg">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_43"
                    android:layout_marginEnd="@dimen/dp_43">

                    <ImageView
                        android:id="@+id/iv_user_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_icon" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_text"
                        android:id="@+id/tv_member_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="舞拉拉哈"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_toEndOf="@+id/iv_user_icon" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id_detail"
                        android:layout_alignBottom="@+id/iv_user_icon"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_toEndOf="@+id/iv_user_icon" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_id_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9223896"
                        android:layout_alignBottom="@+id/iv_user_icon"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_toEndOf="@+id/tv_id" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:id="@+id/tv_register_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id_directly_time"
                        android:layout_alignStart="@+id/tv_register_date_val" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_register_date_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-4-21 20:59"
                        android:layout_alignTop="@+id/tv_id_val"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/pc_bg_gray1"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_35"
                    android:paddingStart="@dimen/dp_63"
                    android:paddingEnd="@dimen/dp_43"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13">

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_flow2" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_today_flow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_flow2" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_total_flow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/pc_bg_gray2"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_35"
                    android:paddingStart="@dimen/dp_63"
                    android:paddingEnd="@dimen/dp_43"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13">

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/team_count2" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_team_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3  (3)"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/team_yeji" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_team_performance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/pc_bg_gray1"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_35"
                    android:paddingStart="@dimen/dp_63"
                    android:paddingEnd="@dimen/dp_43"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13">

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/directly_num2" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_directly_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1  (1)"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_commission" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_today_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/pc_bg_gray2"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_35"
                    android:paddingStart="@dimen/dp_63"
                    android:paddingEnd="@dimen/dp_43"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13">

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/directly_agent2" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_agent_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1  (1)"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yesterday_money" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white_color"
                        android:id="@+id/tv_yesterday_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/pc_bg_gray1"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_35"
                    android:paddingStart="@dimen/dp_63"
                    android:paddingEnd="@dimen/dp_43"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13">

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_total_money" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_text"
                        android:id="@+id/tv_total_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="@dimen/dp_108"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/can_get_money" />

                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/pc_text"
                        android:id="@+id/tv_can_get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_marginStart="@dimen/dp_5" />

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>